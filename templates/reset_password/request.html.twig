{% extends 'base_v21.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<section id="contact" class="my-5">
    <div class="container my-5 d-flex flex-column justify-content-center">
        <div class="row my-4">
            <div class="col d-flex flex-column justify-content-center">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h1 class="text-center display-6 my-4">Réinitialisation de votre mot de passe</h1>

                {{ form_start(requestForm, {'attr': {'class': 'col-md-6 mx-auto'}}) }}
                        <div class="form-floating mb-3">
                            {{ form_widget(requestForm.email, {'attr': {'placeholder': 'email@olona-talents.com'}}) }}
                            {{ form_label(requestForm.email) }}
                        </div>
                    <div>
                        <small>
                            Saisissez votre adresse e-mail, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>

                    <button class="btn btn-primary my-2">Générer un mot de passe</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block preview %}{% endblock %}
