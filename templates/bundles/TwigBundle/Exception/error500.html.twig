
{% extends 'base_v21.html.twig' %}

{% block title %}Erreur Interne du Serveur{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center py-5 my-5">
    <div class="text-center">
        <div class="container">
            <div class="p-5 text-center shadow-lg rounded-3">
                <h1 class="display-6"><i class="bi bi-exclamation-octagon me-2"></i> 500</h1>
