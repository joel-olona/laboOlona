
{% extends 'base_v21.html.twig' %}

{% block title %}Lien expiré{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center py-5 my-5">
    <div class="text-center">
        <div class="container">
            <div class="p-5 text-center shadow-lg rounded-3">
                <h1 class="display-5">
                <i class="bi bi-exclamation-octagon me-2"></i>
                {% if message is defined %}
                    {{ message }}
                {% else %}
                    Désolé, ce lien est expiré
                {% endif %}

                </h1>
                <p class="col-lg-8 mx-auto fs-5 ">
                    Désolé, la page que vous souhaitez consulter n'existe plus.
                </p>
                
                <!-- Centrez les boutons en ajoutant un nouveau div ici -->
                <div class="d-flex justify-content-center gap-2 my-5">
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                        <a class="btn btn-primary btn-lg fw-bold text-uppercase mb-2 mb-sm-0" href="{{ path('app_home')}}">
                            <i class="bi bi-house me-2"></i> Retour à l'accueil
                        </a>
                        <a class="btn btn-outline-primary btn-lg fw-bold text-uppercase mb-2 mb-sm-0" href="{{ path('app_v2_contact')}}">
                            <i class="bi bi-envelope-at me-2"></i> Nous contacter
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
{% block preview %}{% endblock %}