

{% extends 'base_v21.html.twig' %}

{% block title %}Page Introuvable{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center py-1 my-5">
    <div class="text-center">
        <div class="container">
            <div class="p-3 text-center shadow-lg rounded-3">
                <h1 class="display-6"><i class="bi bi-exclamation-octagon me-2"></i> 404</h1>
                <div class="text-center col-6 mx-auto">
                  <img src="{{ asset('images/page-not-exist.png')}}" class="w-50 img-fluid">
