<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="robots" content="noindex">
        <title>{% block title %}Tableau de bord{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1Ld2PCHjDEQu3HcO8AmYC88Bz9yE7Q6hCtvY5pF9m6ouCp68z5i5T1pFGDhlNq3bP2vTpmTmBsKP4jY1rgumg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %} {% include "parts/_navbar-none.html.twig" with { 'title': 'Tableau de bord'} %} {% endblock %}
        <div class="bg-dark text-white">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3">
                        {% block sidebar %}
                            {% include "finance/_sidebar_finance.html.twig" %} 
                        {% endblock %}
                    </div>
                    <div class="col-lg-9 p-1">
                        <div class="div-plein-ecran bg-light text-dark p-3">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('danger') %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endfor %}
                            {% block body %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% block footer %}{% endblock %}
        {% block modal %}{% endblock %}
    </body>
</html>