{% extends "@EasyAdmin/layout.html.twig" %}

{% block head_styles %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
{% block main %}
	<div class="content-header-title">
		<h1 class="title">
			Administration
		</h1>
            <div class="row">
                <div class="col-12 col-lg-6">
                <h2 class="h5 mt-4">Inscrit aujourd'hui ({{ userCountsTodayByType }})</h2>
				{% if chartToday.data.labels|length > 0 %}
                    {{ render_chart(chartToday) }}
				{% else %}
					<div class="m-2 m-sm-5">
						<div class="p-2 p-sm-5 text-center bg-body-tertiary">
							<div class="container py-2 py-sm-5">
							<p class="col-lg-8 mx-auto lead">
								Aucun nouvel utilisateurs aujourd'hui
							</p>
							</div>
						</div>
					</div>
				{% endif %}
                </div>
                <div class="col-12 col-lg-6">
                <h2 class="h5 mt-4">Tous les utilisateurs ({{ userTypesCounts }})</h2>
                    {{ render_chart(chart) }}
                </div>
            </div>
	</div>
{% endblock %}
