{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-3 px-auto">
    <section class="text-dark"><div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">{{ annonce.titre }}</h3>
            <h5 class="text-muted">{{ annonce.typeContrat }}</h5>
            <p><i class="bi bi-geo-alt-fill"></i> {{ annonce.lieu }}</p>
            <p><i class="bi bi-calendar"></i> Date d'expiration : {{ annonce.dateExpiration|date('d/m/Y') }}</p>
            <hr>

            <div class="card-text">
                <h5>Description</h5>
                <p>{{ annonce.description }}</p>
            </div>

            <div class="mb-3">
                <h5>Compétences requises</h5>
                {% if annonce.competences|length > 0 %}
                    {% for skill in annonce.competences %}
                        <span class="badge bg-secondary">{{ skill.nom }}</span>
                    {% endfor %}
                {% else %}
                    <p>Aucune compétence spécifique requise.</p>
                {% endif %}
            </div>

            <div class="mb-3">
                <h5>Nombre de vues</h5>
                <p><i class="bi bi-eye"></i> {{ annonce.annonceVues|length }}</p>
            </div>

            {# {% for application in annonce.applications %} #}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex justify-content-between align-items-center">
                    <button class="btn btn-primary">Postuler</button>
                    <button class="btn btn-outline-primary"><i class="bi bi-heart"></i> J'aime</button>
                </div>
                {{ form_end(form) }}
            {# {% endfor %} #}

        </div>
    </div>
</div>


    </section>
</div>
{% endblock %}
