{% extends 'dashboard/base_new.html.twig' %}

{% block title %}Mes récompences{% endblock %}

{% block body %}
<div class="container">
    <div class="annonce-list p-2">
        <div class="annonce-item shadow p-2 p-sm-5 m-1 m-sm-4 row">
            <div class="col-7">
                <h1 class="card-title mb-4">Mes récompenses</h1>
            </div>
            <div class="col-5">
                <!-- Contenu du div flottant à droite -->
                <div class="float-right">
                    <div class="row">
                        <div class="col px-3 mx-2 card text-white bg-primary mb-3">
                            <span class="small text-center">
                            Gain potentiel
                            </span>
                            <br>
                            <span class="h2 text-center">
                            {{totalRewards}} €
                            </span>
                        </div>
                        <div class="col px-3 mx-2 card text-white bg-success mb-3">
                            <span class="small text-center">
                            Gain actuel
                            </span>
                            <br>
                            <span class="h2 text-center">
                            0 €
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            {% if referrals|length > 0 %}
            <div class="container">
                <div class="row text-strong">
                    <div class="col-sm-5">Annonce</div>
                    <div class="col-sm-7">
                        <div class="row">
                            <div class="col-sm-6 col-md-4 text-center"></div>
                            <div class="col-sm-6 col-md-4 text-center">Gain potentiel</div>
                            <div class="col-sm-6 col-md-4">Expire le</div>
                        </div>
                    </div>
                </div>
                <hr>
                {% for item in referrals %}
                    <div class="row text-muted">
                        <div class="col-sm-5">
                            <a href="{{ path('app_dashboard_referrer_cooptation_references', {'jobId' : item.annonce.jobId })}}" class="">
                                {{ item.annonce.titre}}
                            </a>
                        </div>
                        <div class="col-sm-7">
                            <div class="row">
                                <div class="col-sm-6 col-md-4 text-center">
                                    <a href="{{ path('app_dashboard_referrer_cooptation_references', {'jobId' : item.annonce.jobId })}}" class="">
                                        <span class="badge text-bg-warning">{{ item.referrals|length }}</span>
                                    </a>
                                </div>
                                <div class="col-sm-6 col-md-4 text-center">{{ getPrimeByAnnonce(item.annonce) * item.referrals|length }} €</div>
                                <div class="col-sm-6 col-md-4">{{ item.annonce.dateExpiration|date('d/m/Y') }}</div>
                            </div>
                        </div>
                    </div>                    
                    <hr>                    
                {% endfor %}
            <!-- Plus de lignes et colonnes ici -->
            </div>
            <div class="navigation mt-5">
                {{ knp_pagination_render(referrals, 'parts/_pagination.html.twig') }}
            </div>
            {% else %}
            <div class="container p-5 mx-auto text-center">
                Vous n'avez effectuer aucune recommandation pour le moment <br>
                <a href="{{path('app_dashboard_referrer_annonces')}}" class="btn btn-primary px-5 rounded-pill my-4">Toutes les annonces</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
