{% extends 'dashboard/base.html.twig' %}

{% block title %}Mes statistiques{% endblock %}

{% block body %}
<div class="container">
    <div class="annonce-list p-2">
        <div class="annonce-item shadow p-md-5 m-md-4">
            <h1 class="card-title mb-4">Statistiques</h1>
            {% if referrals|length > 0 %}
            <div class="row">
                <div class="col-6">
                    {{ render_chart(chart) }}
                </div>
                <div class="col-6">
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                </div>
                <div class="col-6">
                    {# {{ render_chart(pie) }} #}
                </div>
            </div>
            {% else %}
            <div class="container p-5 mx-auto text-center">
                Vous n'avez effectuer aucune recommandation pour le moment <br>
                <a href="{{path('app_dashboard_referrer_annonces')}}" class="btn btn-primary px-5 rounded-pill my-4">Toutes les annonces</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
