{% extends 'dashboard/base_new.html.twig' %}

{% block title %}Mes statistiques{% endblock %}

{% block body %}
<div class="container">
    <div class="annonce-list p-2">
        <div class="annonce-item shadow p-2 p-sm-5 m-1 m-sm-4">
            <h1 class="card-title mb-4">Statistiques</h1>
            {% if referrals|length > 0 or number|length > 0 %}
            <div class="row">
            <h2 class="h5 mb-3">28 derniers jours</h2>
                <div class="col">
                    {{ render_chart(chart) }}
                </div>
            </div>
            {% if number|length > 0 %}
            <div class="container p-2 p-sm-5 m-1 m-sm-4 mx-auto text-center">
                Vous avez effectuer {{ number|length }} recommandation(s) <br>
                <a href="{{path('app_dashboard_referrer_references')}}" class="btn btn-primary px-5 rounded-pill my-4">Mes recommandations</a>
            </div>
            {% endif %}
            {% else %}
            <div class="container p-2 p-sm-5 m-1 m-sm-4 mx-auto text-center">
                Vous n'avez effectuer aucune recommandation pour le moment <br>
                <a href="{{path('app_dashboard_referrer_annonces')}}" class="btn btn-primary px-3 px-sm-5 my-2 mx-3 rounded-pill my-4">Toutes les annonces</a>
            </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
