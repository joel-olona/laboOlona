{% extends 'dashboard/base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class="mb-4">Formations</h1>
    <div class="row">
        {% for item in videos %}
            <div class="col-md-4 mb-4">
                <div class="card shadow" style="height: 100%;">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/{{ item.id }}" allowfullscreen></iframe>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <a href="#" class="btn btn-default" data-toggle="modal" data-target="#videoModal{{item.id}}" data-theVideo="https://www.youtube.com/embed/{{ item.id }}">
                                {{ item.snippet.title }}
                            </a>
                        </h5>
                        <p class="card-text">{{ item.snippet.description }}</p>
                        <p class="card-text mt-auto">
                            <small class="text-muted">{{ item.snippet.channelTitle }}</small><br>
                            <small class="text-muted">{{ item.statistics.viewCount }} vues <i class="bi bi-dot"></i> {{ item.timeDiff }}</small>
                        </p>
                    </div>
                </div>
                <div class="modal fade" id="videoModal{{item.id}}" tabindex="-1" role="dialog" aria-labelledby="videoModal{{item.id}}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <div>
                                    <iframe width="100%" height="350" src=""></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% if loop.index is divisible by(3) %}
                </div><div class="row">
            {% endif %}
        {% endfor %}
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
</script>


{% endblock %}
