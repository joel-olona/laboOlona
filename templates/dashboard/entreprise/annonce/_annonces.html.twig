
               
    <p class="mx-2 small">
    Votre recherche renvoie <strong>{{ result|length }}</strong> résultats.
    </p>
    <div class="navigation">
    {{ knp_pagination_render(annonces, 'parts/_pagination.html.twig') }}
    </div> 
                <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Status</th>
                        <th>Contrat</th>
                        <th>Salaire</th>
                        <th>Commence le</th>
                        <th>Candidatures</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for annonce in annonces %}
                    <tr>
                        <td>{{ annonce.titre }}</td>
                        <td>
                            <div class="annonce {{ 'status-' ~ annonce.status|lower }}">                                    
                                <span class="status-label">{{ (annonce.status|status_label) }}</span>
                                <!-- Autres détails de l'annonce -->
                            </div>
                        </td>
                        <td>{{ annonce.typeContrat }}</td>
                        <td>{{ annonce.salaire }}</td>
                        <td>{{ annonce.dateExpiration|date('d M Y') }}</td>
                        <td>{{ annonce.applications|length }}</td>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-warning rounded-pill" href="{{ path('app_dashboard_entreprise_view_annonce', {'id': annonce.id}) }}"><i class="bi bi-eye"></i></a>
                                <a class="btn btn-sm btn-warning rounded-pill" href="{{ path('app_dashboard_entreprise_edit_annonce', {'id': annonce.id}) }}"><i class="bi bi-pencil"></i></a>
                                {# <form method="post" action="{{ path('app_dashboard_entreprise_delete_annonce', {'id': annonce.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
                                    <button class="btn btn-sm btn-danger rounded-pill"><i class="bi bi-trash-fill"></i></button>
                                </form> #}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune annonce créé pour le moment</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>