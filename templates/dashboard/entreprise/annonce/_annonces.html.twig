
               
    <p class="mx-2 small">
     <strong>{{ result|length }}</strong> résultats.
    </p>
    <div class="navigation">
    {{ knp_pagination_render(annonces, 'parts/_pagination.html.twig') }}
    </div> 
                <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Status</th>
                        <th>Contrat</th>
                        <th>Salaire</th>
                        <th>Commence le</th>
                        <th>Candidatures / Vues</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for annonce in annonces %}
                    <tr>
                        <td>{{ annonce.titre }}</td>
                        <td>
                            <div class="annonce {{ 'status-' ~ annonce.status|lower }}">                                    
                                <span class="status-label">{{ (annonce.status|status_label) }}</span>
                                <!-- Autres détails de l'annonce -->
                            </div>
                        </td>
                        <td>{{ annonce.typeContrat }}</td>
                        <td>{{ annonce.salaire }}</td>
                        <td>{{ annonce.dateExpiration|date('d M Y') }}</td>
                        <td>{{ annonce.applications|length }} candidatures <br>{{ annonce.annonceVues|length }} vues</td>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-warning rounded-pill custom-tooltip" data-tooltip="Voir les détails de l'annonce" href="{{ path('app_dashboard_entreprise_view_annonce', {'id': annonce.id}) }}">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a class="btn btn-sm btn-warning rounded-pill custom-tooltip" data-tooltip="Éditer l'annonce" href="{{ path('app_dashboard_entreprise_edit_annonce', {'id': annonce.id}) }}">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune annonce créé pour le moment</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>