{% extends 'dashboard/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <div class="container mt-3">
        <div class="row text-dark">
        <h1 class="mb-4">Mes annonces</h1>
    
            <hr>
                <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Status</th>
                        <th>Contrat</th>
                        <th>Salaire</th>
                        <th>Commence le</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for posting in job_listings %}
                    <tr>
                        <td>{{ posting.titre }}</td>
                        <td>{{ posting.status }}</td>
                        <td>{{ posting.typeContrat }}</td>
                        <td>{{ posting.salaire }}</td>
                        <td>{{ posting.dateExpiration|date('d M Y') }}</td>
                        <td>
                            <div class="d-flex">
                                <a class="btn btn-sm btn-warning rounded-pill" href="{{ path('app_dashboard_entreprise_view_annonce', {'id': posting.id}) }}"><i class="bi bi-eye"></i></a>
                                <a class="btn btn-sm btn-warning rounded-pill" href="{{ path('app_dashboard_entreprise_edit_annonce', {'id': posting.id}) }}"><i class="bi bi-pencil"></i></a>
                                <form method="post" action="{{ path('app_dashboard_entreprise_delete_annonce', {'id': posting.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ posting.id) }}">
                                    <button class="btn btn-sm btn-danger rounded-pill"><i class="bi bi-trash-fill"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune annonce créé pour le moment</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}