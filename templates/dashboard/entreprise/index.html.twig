{% extends 'dashboard/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Tableau de bord</h1>

        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('app_dashboard_entreprise_annonces') }}" class="text-decoration-none">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <h2 class="card-title">{{ job_listings|length }}</h2>
                            <p class="card-text">Offres d'emploi postées</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('app_dashboard_entreprise_candidatures') }}" class="text-decoration-none">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h2 class="card-title">{{ applications|length }}</h2>
                            <p class="card-text">Candidatures reçues</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4">
                <a href="{{ path('app_dashboard_entreprise_rendez_vous') }}" class="text-decoration-none">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h2 class="card-title">{{ meetings|length }}</h2>
                            <p class="card-text">Rendez-vous programmés</p>
                        </div>
                    </div>
                </a>
        </div>

        <div class="row">
            <div class="col-md-4">
                <a href="{{ path('app_dashboard_entreprise_notifications') }}" class="text-decoration-none">
                        <div class="card text-white bg-dark mb-3">
                            <div class="card-body">
                                <h2 class="card-title">{{ job_listings|length }}</h2>
                                <p class="card-text">Notifications reçues</p>
                            </div>
                        </div>
                    </div>
                </a>
                </div>
        
    </div>
 
{% endblock %}
