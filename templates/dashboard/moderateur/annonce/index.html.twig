{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2>Gestion des annonces</h2>
    {# <a href="{{ path('app_dashboard_moderateur_new_secteur')}}" class="btn btn-secondary my-3">Nouveau</a> #}
    {{ form_start(form, {'attr': {'class': 'form-group my-4'}}) }}
    <div class="row">
        <div class="input-group">
                <div class="col">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col">
                    {{ form_widget(form.entreprise, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col">
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                </div>
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary"><i class="h5 bi mx-2 bi-search"></i></button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    <table class="table table-responsive">
        <thead>
            <tr>
                <th class="col-1">ID</th>
                <th class="col-3">Titre</th>
                <th class="col-3">Entreprise</th>
                <th class="col-2">Status</th>
                <th class="col-3">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for annonce in annonces %}
                <tr>
                    <td class="id-column">{{ annonce.id }}</td>
                    <td>{{ annonce.titre }}</td>
                    <td>{{ annonce.entreprise.nom }}</td>
                    <td>
                        <form method="post" action="{{ path('change_status_annonce', {'id': annonce.id}) }}">
                            <select name="status" class="form-control" onchange="this.form.submit()">
                                <option value="PUBLISHED" {{ annonce.status == 'PUBLISHED' ? 'selected' : '' }}>Publiée</option>
                                <option value="PENDING" {{ annonce.status == 'PENDING' ? 'selected' : '' }}>En attente</option>
                                <option value="REJECTED" {{ annonce.status == 'REJECTED' ? 'selected' : '' }}>Rejetée</option>
                                <option value="EXPIRED" {{ annonce.status == 'EXPIRED' ? 'selected' : '' }}>Expirée</option>
                                <option value="FEATURED" {{ annonce.status == 'FEATURED' ? 'selected' : '' }}>Mis en avant</option>
                                <option value="ARCHIVED" {{ annonce.status == 'ARCHIVED' ? 'selected' : '' }}>Archivée</option>
                                <option value="DELETED" {{ annonce.status == 'DELETED' ? 'selected' : '' }}>Effacée</option>
                            </select>
                        </form>
                    </td>
                    <td class="actions-col">
                        <a href="{{path('view_annonce', { 'id': annonce.id}) }}" class="btn btn-sm btn-info">Modifier</a>
                        <a href="{{path('delete_annonce', { 'id': annonce.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(annonces, 'parts/_pagination.html.twig') }}
    </div>
</div>

{% endblock %}

