{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2><i class="fas fa-file-alt"></i> Candidature #{{ application.id }}</h2>
    <div class="container mt-4">

        <!-- Conseils pour le Modérateur -->
        <div class="card my-4">
            <div class="card-header pt-3 bg-warning">
            <h3 class="h4"><i class="fas fa-lightbulb"></i> Conseils pour l'Évaluation</h3>
            </div>
            <div class="card-body">
                <p>Prenez en considération l'adéquation des compétences et des expériences du candidat avec les exigences du poste.</p>
                <a href="{{ path('rendezvous_create', {'candidature': application.id })}}" class="btn btn-secondary rounded-pill">Organiser un rendez-vous</a>
                <!-- Autres conseils ici -->
            </div>
        </div>

        <!-- Détails de la Candidature -->
        <div class="card my-4">
            <div class="card-header pt-3 bg-warning">
            <h3 class="h4"><i class="fas fa-user-circle"></i> Détails de la Candidature</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-briefcase"></i> Candidature pour le poste : {{ application.annonce.titre }}</h5>
                <p>Candidat : {{ application.candidat.candidat.nom }} {{ application.candidat.candidat.prenom }}</p>
                <p><strong>Email:</strong> {{ application.candidat.candidat.email }}</p>
                <p><strong>Biographie:</strong> {{ application.candidat.resume }}</p>
                <p><strong>Nombre de Compétences:</strong> 
                    {% for skill in application.candidat.competences %}
                    <span class="badge bg-dark">{{ skill.nom }}</span>
                    {% endfor %}
                </p>
                <p><strong>Nombre d'Expériences:</strong> {{ application.candidat.experiences|length }}</p>
                <p><strong>Nombre d'Applications:</strong> {{ application.candidat.applications|length }}</p>
                <p>Lettre de motivation : </p>
                <p>{{ application.lettreMotivation }}</p>
                <p>Lien vers le CV : <a href="{{ application.cvLink }}">Voir le CV</a></p>
                <p>Date de candidature : {{ application.dateCandidature|date('d/m/Y') }}</p>
                <p>Status : {{ application.status|candidature_status_Label }}</p>
                <p>Prétention salariale : {{ application.pretentionSalariale }}</p>
                <!-- Autres détails ici -->
            </div>
        </div>

    

        <!-- Informations sur le Poste -->
        {% if application.annonce %}
            <div class="card my-4">
                <div class="card-header pt-3 bg-warning">
                <h3 class="h4"><i class="fas fa-info-circle"></i> Informations sur le poste</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Titre du poste : {{ application.annonce.titre }}</h5>
                    <p>Description : {{ application.annonce.description|raw }}</p>
                    <p>Date de création : {{ application.annonce.dateCreation|date('d/m/Y') }}</p>
                    <p>Date d'expiration : {{ application.annonce.dateExpiration|date('d/m/Y') }}</p>
                    <p>Status : {{ application.annonce.status|status_label }}</p>
                    <p>Salaire : {{ application.annonce.salaire }}</p>
                    <p>Lieu : {{ application.annonce.lieu }}</p>
                    <p>Type de contrat : {{ application.annonce.typeContrat }}</p>
                    <p>Nombre de postes : {{ application.annonce.nombrePoste }}</p>
                    <!-- Détails du poste ici -->
                </div>
            </div>
        {% endif %}
    </div>
<a href="javascript:history.back()" class="btn btn-secondary rounded-pill my-3"><i class="mx-2 bi bi-arrow-left"></i>Retour</a>
</div>
{% endblock %}





