{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2><i class="fas fa-file-alt"></i> Assignation #{{ assignation.id }}</h2>
    <div class="container mt-4">

        <!-- Conseils pour le Modérateur -->
        <div class="card my-4">
            <div class="card-header pt-3 bg-warning">
            <h3 class="h4"><i class="fas fa-lightbulb"></i> Conseils pour l'Évaluation</h3>
            </div>
            <div class="card-body">
                <p>Prenez en considération l'adéquation des compétences et des expériences du candidat avec les exigences du poste.</p>
                <a href="{{ path('rendezvous_create', {'candidature': assignation.application.id })}}" class="btn btn-secondary rounded-pill">Organiser un rendez-vous</a>
                <!-- Autres conseils ici -->
            </div>
        </div>

        <!-- Détails de la Candidature -->
        <div class="card my-4">
            <div class="card-header pt-3 bg-warning">
            <h3 class="h4"><i class="fas fa-user-circle"></i> Détails de l'Assignation</h3>
            </div>
            <div class="card-body">
                <span class="card-title"><i class="fas fa-briefcase"></i> Assignation pour le poste :</span>
                <h4 class="card-title text-primary">{{ assignation.jobListing.titre }}</h4>
                    <div class="row text-muted my-4">
                        <div class="col-md-4">
                            <p><strong>Date assignation</strong> : {{ assignation.dateAssignation|date('d/m/Y') }}</p>
                            <p><strong>Date d'expiration</strong> : {{ assignation.jobListing.dateExpiration|date('d/m/Y') }}</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Status</strong> : {{ getStatusAssignation(assignation)|raw }}</p>
                            <p><strong>Salaire</strong> : {{ getForfaitAssignation(assignation)|raw }}</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Commentaire :</strong> </p>
                            <p>{{ assignation.commentaire|raw }}</p>
                        </div>
                    </div>
                <p>Candidat : {{ assignation.profil.candidat.nom }} {{ assignation.profil.candidat.prenom }}</p>
                <p><strong>Email:</strong> {{ assignation.profil.candidat.email }}</p>
                <p><strong>Biographie :</strong> 
                <div class="small">{{ assignation.profil.resume|raw }}</div>
                <p><strong>Nombre de Compétences :</strong> 
                    {% for skill in assignation.profil.competences %}
                    <span class="badge bg-dark">{{ skill.nom }}</span>
                    {% endfor %}
                </p>
                <p><strong>Nombre d'Expériences:</strong> {{ assignation.profil.experiences|length }}</p>
                <p><strong>Nombre d'Applications:</strong> {{ assignation.profil.applications|length }}</p>
                
                <p><strong>Lien vers le CV :</strong> <a href="{{ asset('uploads/cv/' ~ assignation.profil.cv) }}" class="btn btn-outline-primary rounded-pill btn-sm" target=_blank >Voir le CV</a></p>
                <!-- Autres détails ici -->
            </div>
        </div>

    

        <!-- Informations sur le Poste -->
        {% if assignation.jobListing %}
            <div class="card my-4">
                <div class="card-header pt-3 bg-warning">
                <h3 class="h4"><i class="fas fa-info-circle"></i> Informations sur le poste</h3>
                </div>
                <div class="card-body">
                    <span class="card-title"><i class="fas fa-briefcase"></i> Titre du poste</span>
                    <h4 class="card-title text-primary">{{ assignation.jobListing.titre }}</h4>
                    <div class="row text-muted my-4">
                        <div class="col-md-4">
                            <p><strong>Date de création</strong> : {{ assignation.jobListing.dateCreation|date('d/m/Y') }}</p>
                            <p><strong>Date d'expiration</strong> : {{ assignation.jobListing.dateExpiration|date('d/m/Y') }}</p>
                            <p><strong>Lieu</strong> : {{ assignation.jobListing.lieu }}</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Status</strong> : {{ assignation.jobListing.status|status_label }}</p>
                            <p><strong>Salaire</strong> : {{ assignation.jobListing.salaire }}</p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Type de contrat</strong> : {{ assignation.jobListing.typeContrat }}</p>
                            <p><strong>Nombre de postes</strong> : {{ assignation.jobListing.nombrePoste }}</p>
                        </div>
                    </div>
                    <h5>Description :</h5>
                    <div class="small">{{ assignation.jobListing.description|raw }}</div>
                    <!-- Détails du poste ici -->
                </div>
            </div>
        {% endif %}
    </div>
<a href="javascript:history.back()" class="btn btn-primary rounded-pill my-3"><i class="mx-2 bi bi-arrow-left"></i>Retour</a>
</div>
{% endblock %}





