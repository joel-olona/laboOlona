{% extends 'dashboard/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h2>Entreprises</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Taille</th>
                <th>Localisation</th>
                <th>Site Web</th>
                <th>Description</th>
                <th>Secteurs</th>
                <th>Annonces</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td>{{ entreprise.id }}</td>
                    <td>{{ entreprise.nom }}</td>
                    <td>{{ entreprise.taille }}</td>
                    <td>{{ entreprise.localisation }}</td>
                    <td>{{ entreprise.siteWeb }}</td>
                    <td>{{ entreprise.description|length > 50 ? entreprise.description|slice(0, 50) ~ '...' : entreprise.description }}</td>
                    <td>
                        {% for secteur in entreprise.secteurs %}
                            {{ secteur.nom }},
                        {% endfor %}
                    </td>
                    <td>{{ entreprise.jobListings|length }}</td>
                    <td>
                        <a href="{{ path('voir_entreprise', {'id': entreprise.id}) }}" class="btn btn-info">Voir</a>
                        <form method="post" action="{{ path('supprimer_entreprise', {'id': entreprise.id}) }}" style="display:inline-block;">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
