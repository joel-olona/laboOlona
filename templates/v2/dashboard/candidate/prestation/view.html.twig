{% extends 'base_v21.html.twig' %}

{% block title %}
  {{ prestation.titre }} | Olona Talents
{% endblock %}

{% block meta %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block sidebar %}
  {% include "v2/dashboard/layout_candidat.html.twig" %}
{% endblock %}

{% block body %}
<section class="container my-5">
  <div class="card shadow">
    <div class="card-body p-3 p-sm-5">
      <h1 class="card-title">{{ prestation.titre }}</h1>
      <hr>
      <p class="small">
      <span class="">{{ prestation.createdAt|date('d/m/Y') }}</span> | 
      <span class="">{{ prestation.status }}</span> | 
      </p>
      <h2 class="h5">Description</h2>
      <p>{{ prestation.description|raw }}</p>
      
      <h2 class="h5">Secteur</h2>
      <i class="mx-2 bi bi-tag"></i><span class="badge text-bg-primary rounded-pill mb-4">{{ prestation.secteurs.nom }}</span>
      
      {% if prestation.specialisations is not empty %}
      <h2 class="h5">Spécialisation</h2>
      <p class="row">
        {{prestation.specialisations}}
      </p>
      {% endif %}

      
      {% if prestation.tarifPrestation is not empty %}
      <h2 class="h5">Tarifs Proposés</h2>
      <p class="fs-lighter">
        <i class="mx-2 bi bi-currency-exchange"></i><span class="">{{prestation.tarifPrestation}}</span>
      </p>
      {% endif %}

      <h2 class="h5">Modalités de Prestation</h2>
      <p><i class="mx-2 bi bi-person-workspace"></i> {{ prestation.modalitesPrestation }}</p>
      
      {% if prestation.motsCles is not empty %}
      <h2 class="h5">Mots clés</h2>
      <p class="row">
        {{prestation.motsCles|raw }}
      </p>
      {% endif %}

      {% if prestation.conditionsParticulieres is not empty %}
      <h2 class="h5">Conditions particulière</h2>
      <p class="row">
        {{prestation.conditionsParticulieres|raw }}
      </p>
      {% endif %}

      {% if prestation.medias is not empty %}
      <h2 class="h5">Médias</h2>
      <p class="row">
        {{prestation.medias}}
      </p>
      {% endif %}

      {% if prestation.disponibilites is not empty %}
      <h2 class="h5">Disponibilités</h2>
      <p class="row">
        {{prestation.disponibilites}}
      </p>
      {% endif %}

      {% if prestation.portfolioLinks is not empty %}
      <h2 class="h5">Références</h2>
      <p class="row">
        {{prestation.portfolioLinks}}
      </p>
      {% endif %}

      {% if prestation.preferencesCommunication is not empty %}
      <h2 class="h5">Préférence communication</h2>
      <p class="row">
        {{prestation.preferencesCommunication}}
      </p>
      {% endif %}
      <hr>
      <a href="{{path('app_v2_candidate_edit_prestation', {'prestation': prestation.id})}}" class="btn btn-outline-warning fw-semibold text-uppercase my-3 px-5">
        <i class="mx-2 bi bi-pencil"></i>Editer
      </a>
      <button type="button" class="btn btn-dark my-3 fw-semibold text-uppercase px-5">
        <i class="mx-2 bi bi-rocket-takeoff"></i>Booster
      </button>
    </div>
  </div>
</section>
{% endblock %}
