<turbo-stream action="update" target="current-user-credit">
  <template>
    {{ credit }}
  </template>
</turbo-stream>
{% if success is defined and success %}
    <turbo-stream action="update" target="contactDetails">
        <template>
          <h2 class="fs-4">Information client</h2>
          <div class="row my-4 align-items-center">
            <div class="col-12 col-md-3">
              <div class="rounded-circle profile-img bg-image-candidat-account" style="background-image: url('/uploads/experts/company-default.jpg');" alt="Avatar"></div>
            </div>
            <div class="col-12 col-md-6">
              <strong>Entreprise:</strong> {{ user.entrepriseProfile.nom }}<br>
              <strong>Email:</strong> {{ user.email }}<br>
              <strong>Téléphone:</strong> {{ user.telephone }}<br>
            </div>
          </div>
        </template>
    </turbo-stream>
{% endif %}
<turbo-stream action="update" target="alert-application">
  <template>
    <div class="alert alert-light-primary d-flex align-items-center" role="alert">
      <i class="bi bi-info-circle-fill me-1 me-sm-3"></i>
      <div>
        Votre candidature a été bien envoyée, veuillez vérifier régulièrement votre mail
        <a href="{{ path('app_v2_candidate_application')}}" class="mx-4 btn btn-primary" class="">Mes candidatures</a>
      </div>
    </div>
  </template>
</turbo-stream>
<turbo-stream action="update" target="errorToast">
    <template>
        <div class="toast-header">
            <strong class="me-auto">{{ status }}</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            {{ message }}
        </div>
    </template>
</turbo-stream>