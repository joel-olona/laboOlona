{% extends 'base_v21.html.twig' %}

{% block title %}
	Vos coordonnées Olona Talents
{% endblock %}

{% block meta %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<section class="mt-5">
		<div class="row">
			<div class="col">
				<div class="p-2 p-sm-5">
					<h1 class="fs-2 text-center">
						Vos informations de contact
					</h1>
					<div class="col">
						<hr class="my-4">
						{{ form_start(form, {'attr': {'data-turbo': 'false'}})}}
						{{ form_errors(form)}}
						<div class="row mb-3">
							<div class="col">
								{{ form_row(form.nom) }}
							</div>
							<div class="col">
								{{ form_row(form.prenom) }}
							</div>
						</div>
						{{ form_row(form.email) }}
						{{ form_row(form.telephone) }}
						{{ form_row(form.adress) }}
						<div class="row mb-3">
							<div class="col">
								{{ form_row(form.postalCode) }}
							</div>
							<div class="col">
								{{ form_row(form.city) }}
							</div>
						</div>
						
						<div style="display:none;">
							{{ form_widget(form) }}
						</div>
							<button type="submit" class="btn btn-primary my-3 my-sm-5 px-4 float-end fw-bold">
								Suivant	<i class="bi bi-arrow-right ms-2"></i>
							</button>
							<a href="{{ path('app_v2_dashboard_create_profile', {'id':app.user.id, 'typology':app.user.type|capitalize})}}" class="btn btn-outline-primary my-3 my-sm-5 px-4 float-end fw-bold me-2">
								<i class="bi bi-arrow-left me-2"></i> Précedent
							</a>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
			<div class="col-12 col-sm-4">
			{% include "v2/dashboard/provider/_sticky_sidebar.html.twig" %}
			</div>
		</div>
	</section>
{% endblock %}

{% block preview %}{% endblock %}