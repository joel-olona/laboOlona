{% extends 'base_v21.html.twig' %}

{% block title %}
	Vos coordonnées Olona Talents
{% endblock %}

{% block meta %}
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}

	<section class="mt-5">
		<div class="row">
			<div class="col">
				<div class="p-2 p-sm-5">
					<h1 class="fs-2">
						Vos informations de contact
					</h1>
					{{ form_start(form, {'attr': {'data-turbo': 'false'}})}}
					{{ form_errors(form)}}
					<div class="col">
						<hr class="my-4">
						<div class="row">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(form.nom) }}
									<label for="">Votre nom</label>
								</div>
								<div class="form-floating">
									{{ form_widget(form.prenom) }}
									<label for="">Votre prénom</label>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(form.email) }}
									{{ form_label(form.email) }}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(form.telephone) }}
									{{ form_label(form.telephone) }}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(form.adress) }}
									{{ form_label(form.adress) }}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-group mb-3">
								<div class="form-floating">
									{{ form_widget(form.postalCode) }}
									{{ form_label(form.postalCode) }}
								</div>
								<div class="form-floating">
									{{ form_widget(form.city) }}
									{{ form_label(form.city) }}
								</div>
							</div>
						</div>

						<div class="row" id="">
						{% if app.user.type is defined and app.user.type is same as(constant('App\\Entity\\User::ACCOUNT_CANDIDAT')) %}
							<div id="" class="candidateProfile">
								<div class="form-floating">
									{{ form_widget(form.candidateProfile.localisation) }}
									{{ form_label(form.candidateProfile.localisation) }}
								</div>
							</div>
						{% endif %}
						{% if app.user.type is defined and app.user.type is same as(constant('App\\Entity\\User::ACCOUNT_ENTREPRISE')) %}
							<div id="" class="recruiterProfile">
								<div class="form-floating">
									{{ form_widget(form.entrepriseProfile.localisation) }}
									{{ form_label(form.entrepriseProfile.localisation) }}
								</div>							 
							</div>							 
						{% endif %}
							
						</div>
						
						<div style="display:none;">
							{{ form_widget(form) }}
						</div>
						<button type="submit" class="btn btn-primary my-3 my-sm-5 float-end">Suivant</button>
						<a href="{{ path('app_v2_dashboard_create_profile', {'id':app.user.id, 'typology':app.user.type|capitalize})}}" class="btn btn-outline-primary my-3 my-sm-5 float-end">Précedent</a>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
			<div class="col-12 col-sm-4">
			{% include "v2/dashboard/profile/_sticky_sidebar.html.twig" %}
			</div>
		</div>
	</section>
{% endblock %}

{% block preview %}{% endblock %}