{{ dump(this.userProfile.prenom) }} #}
<a href="{{ path('app_dashboard_entreprise_details_candidat', {'id': this.candidat.id}) }}">
  <div class="col">
      <div class="card">
          <img src="{{vich_uploader_asset(this.candidat, 'file')}}" class="card-img-top" alt="{{ this.userProfile.prenom }}">
          <div class="card-body">
              <p class="card-title h6">{{ this.userProfile.prenom }} {{ this.userProfile.nom|slice(0, 1)|upper }}.</p>
              <small>
                  <small class="card-text">{{ this.candidat.titre }}</small><br>
                  <small class="card-text"><i class="mx-1 bi bi-trophy"></i> {{ this.candidat.experiences|length }} {{ 'app_catalog_expert.realised'|trans }}</small><br>
                  <small class="card-text"><i class="mx-1 bi bi-patch-check"></i> {{ 'app_catalog_expert.certificated'|trans }}</small>
              </small>
          </div>
      </div>
  </div>
</a>