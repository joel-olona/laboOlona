{# templates/security/admin/login.html.twig #}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Olona Talents</title>
    <link rel="icon" href="{{ asset('images/favicon.ico')}}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
<body class="d-flex align-items-center py-4 bg-body-tertiary">
    <main class="form-signin w-100 m-auto">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4">
            <div class="login-box mt-5 shadow-lg p-3 mb-5 bg-body rounded"> <!-- Ajout de l'ombre et du padding -->
                <div class="login-logo text-center mb-4">
                    <a href="{{ path('admin_login') }}">
                        <img src="https://app.olona-talents.com/images/logo-olona-talents-black.png" alt="Logo Olona-talents" class="img-fluid">
                    </a>
                </div>
                <div class="login-box-body">
                    <p class="login-box-msg text-center">Administration</p>
                    {% if error %}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> : {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endif %}
                    <form method="post" role="form">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="mb-3"> <!-- Classe modifiée pour le margin -->
                            <input type="text" class="form-control" id="username" name="{{ form.email.vars.full_name }}"
                                value="{{ last_username }}" required>
                            <div class="form-text">Email</div> <!-- Amélioration de l'accessibilité -->
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="{{ form.password.vars.full_name }}"
                                required>
                            <div class="form-text">Password</div> <!-- Amélioration de l'accessibilité -->
                        </div>
                        <div class="d-grid gap-2"> <!-- Utilisation de d-grid pour un meilleur rendu du bouton -->
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>